@page "/{**slug}"

<div class="max-w-3xl mx-auto px-4 py-8">

    @if(isLoading)
    {
        <Loading />
    }
    @if(notFound)
    {
        <NotFound />
    }
    else
    {
        <div class="prose dark:prose-invert max-w-none font-serif text-inherit">
            @((MarkupString)htmlContent)
        </div>
    }

</div>
